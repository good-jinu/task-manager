AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
APP_AWS_REGION="us-east-1"

# Domain for the deployed application
WEB_DOMAIN="task-manager.example.com"

# Authentication Configuration
AUTH_SECRET="your_auth_secret_key_here"
AUTH_NOTION_ID="your_notion_oauth_client_id"
AUTH_NOTION_SECRET="your_notion_oauth_client_secret"
AUTH_NOTION_REDIRECT_URI="https://your-domain.com/auth/callback/notion"

# Database Configuration
DYNAMODB_USERS_TABLE="notion-task-manager-users"
DYNAMODB_TASKS_TABLE="notion-task-manager-tasks"

# OpenAI Configuration (Required for Intelligent Task Finder)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"
# Optional: Custom OpenAI endpoint (defaults to https://api.openai.com/v1)
OPENAI_BASE_URL="https://api.openai.com/v1"

# Optional OpenAI Configuration
# Model to use for intelligent search (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL="gpt-4"
# Maximum tokens per API request (1-4096 for most models)
OPENAI_MAX_TOKENS="2000"
# Creativity level: 0.0 (deterministic) to 2.0 (very creative)
OPENAI_TEMPERATURE="0.7"

# Optional Search Configuration
# Maximum number of search results to return (1-100)
SEARCH_MAX_RESULTS="10"
# Minimum relevance score threshold (0.0-1.0)
SEARCH_RELEVANCE_THRESHOLD="0.5"
# Weight factor for date proximity in ranking (0.0-1.0)
SEARCH_DATE_WEIGHT_FACTOR="0.3"
# Enable result caching for better performance
SEARCH_CACHE_ENABLED="true"
# Cache time-to-live in seconds (0 = no expiration)
SEARCH_CACHE_TTL="300"