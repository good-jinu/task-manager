AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
APP_AWS_REGION="us-east-1"

# Domain for the deployed application
WEB_DOMAIN="task-manager.example.com"

# Authentication Configuration
AUTH_SECRET="your_auth_secret_key_here"
AUTH_NOTION_ID="your_notion_oauth_client_id"
AUTH_NOTION_SECRET="your_notion_oauth_client_secret"
AUTH_NOTION_REDIRECT_URI="https://your-domain.com/auth/callback/notion"

# Database Configuration
DYNAMODB_USERS_TABLE="notion-task-manager-users"
DYNAMODB_TASKS_TABLE="notion-task-manager-tasks"

# OpenAI Configuration (Required for Intelligent Task Finder)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_BASE_URL="https://api.openai.com/v1"

# Optional OpenAI Configuration
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="2000"
OPENAI_TEMPERATURE="0.7"

# Optional Search Configuration
SEARCH_MAX_RESULTS="10"
SEARCH_RELEVANCE_THRESHOLD="0.5"
SEARCH_DATE_WEIGHT_FACTOR="0.3"
SEARCH_CACHE_ENABLED="true"
SEARCH_CACHE_TTL="300"